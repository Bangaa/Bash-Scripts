#!/bin/bash

# Quita los espacios en el nombre de los archivos especificados

(( procesados = 0 ))

for archivo in "$@"
do
	nuevo=${archivo//\ /_}

	if  mv "$archivo" $nuevo 2>/dev/null ;then
		(( procesados++ )) 
	else 
		echo "No se hace nada para «$nuevo»."
	fi

done

echo $procesados archivos ahora sin espacios
